{% extends 'AtemschutzNachweisBundle:Nachweis:base.html.twig' %}

{% block title %}{{ parent() }} - Bearbeiten{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block moduleTitle %}Nachweis {{ nachweis }} bearbeiten{% endblock %}

{% block moduleActions %}
<ul class="inline">
	<li><a href="{{ path('nachweis_show', {'id': nachweis.getId(), '_format': 'html'}) }}">Abbrechen</a>
</ul>
{% endblock %}

{% block moduleBody %}
{% include 'AtemschutzNachweisBundle:Nachweis:form.html.twig' %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
	$(function() {
		$( ".date" ).datepicker({
			dateFormat: 'dd.mm.yy',
			showOn: "both",
			changeMonth: true,
			changeYear: true,
			buttonImage: "{{ asset('bundles/atemschutzcore/images/icons/16x16/calendar.png') }}",
			buttonImageOnly: true,
			showOtherMonths: true,
			selectOtherMonths: true
		});
	});
	</script>
{% endblock %}