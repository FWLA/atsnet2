{# bundle: AtemschutzCoreBundle #}

{% extends '::base.html.twig' %}

{% block title %}ATS.net 2{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'bundles/atemschutzcore/css/cssgrids.css'
		'bundles/atemschutzcore/css/blitzer/jquery-ui.css'
		'bundles/atemschutzcore/css/style.css'
		filter='cssrewrite'
	%}
		<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
	{% endstylesheets %}
{% endblock %}

{% block body %}
	<div id="body">
		<div id="content_body">
			<header>
				<div class="yui3-g">
					<div id="header">
						<div class="yui3-u-3-4">
							<h1>
								<a id="logo" href="{{ path('default_home') }}"></a>
							</h1>
						</div>
						<div class="yui3-u-1-4">
							<div id="user_information">
								{% if is_granted('ROLE_USER') %}
								<div id="user_menu">
									<div>
										<button id="user_button">{{ app.user }}</button>
										<button id="user_select_action">Auswählen</button>
									</div>
									<ul>
										<li><a href="{{ path('logout') }}">Abmelden</a></li>
									</ul>
								</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</header>
		
			<div id="content-wrapper">
				<div class="yui3-g">
					<div class="yui3-u-1-5">
						{% if is_granted('ROLE_USER') %}
						<div id="menu">
							<h2>Menü</h2>
							{% include 'AtemschutzCoreBundle:Default:menu.html.twig' %}
							{% include 'AtemschutzNachweisBundle:Default:menu.html.twig' %}
						</div>
						{% endif %}
					</div>
					
					<div class="yui3-u-4-5">
						<div id="content">
							{% include 'AtemschutzCoreBundle:Default:flash.html.twig' %}
							{% block bundleBody %}{% endblock %}
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<footer>
			<div id="footer_content">
				<div id="footer_info">
					<div class="yui3-g">
						<div class="yui3-u-1-4">
							<div class="version">Version 2.0.7</div>
						</div>
						<div class="yui3-u-1-2">
							<div class="copyright">Copyright 2012 - {{ "now"|date("Y") }} Benjamin Ihrig</div>
						</div>
						<div class="yui3-u-1-4">
							<div class="bugtracker">
								<a href="http://bug.atsnet.org" target="_blank">Bugtracker</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>
	</div>
	
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	
	{% javascripts
		'bundles/atemschutzcore/js/jquery-1.9.1.js'
		'bundles/atemschutzcore/js/jquery-ui.custom.js'
		'bundles/atemschutzcore/js/script.js'
		'bundles/atemschutznachweis/js/menu.js'
	%}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
	
{% endblock %}